<% include ./partials/header %>

<div class="container" style="margin-top: 100px;">

    <form action="/signin" method="POST">
        <h1 style="text-align: center;">Sign In</h1>
        <div class="form-group">
            <label for="adminEmail">Email address</label>
            <input type="email" class="form-control" id="adminEmail" aria-describedby="emailHelp" placeholder="Enter email" name="username">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="adminPassword">Password</label>
            <input type="password" class="form-control" id="adminPassword" placeholder="Enter Password" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>


<% include ./partials/footer %>